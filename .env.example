# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/business_management
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=business_management
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# AI Services
HUGGINGFACE_API_KEY=your_huggingface_api_key
SPACY_MODEL=en_core_web_lg
YOLO_MODEL_PATH=./models/yolov5s.pt
TESSERACT_LANG=eng

# Document Processing
TIKA_SERVER_URL=http://localhost:9998
LIBREOFFICE_PATH=/usr/bin/libreoffice
PDF_MAX_SIZE=10485760 # 10MB
IMAGE_MAX_SIZE=5242880 # 5MB

# Analytics
MATOMO_URL=http://localhost:8080
MATOMO_SITE_ID=1
MATOMO_TOKEN_AUTH=your_matomo_token
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# OpenTelemetry
OTEL_SERVICE_NAME=business-management
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_RESOURCE_ATTRIBUTES=service.name=business-management,service.version=1.0.0

# Security
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d
BCRYPT_SALT_ROUNDS=10
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760 # 10MB
LOG_MAX_FILES=5

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour

# Email
SMTP_HOST=smtp.maildev
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@business-management.com

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png
